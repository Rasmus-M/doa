       BYTE 20                         ; HP
       BYTE 10                         ; AC
       BYTE 14                         ; Damage
*      Fire elemental
MOFIEL DATA TXFIEL
       DATA 10                         ; Pattern number
       BYTE 5                          ; Level
       BYTE 20                         ; HP
       BYTE 5                          ; AC
       BYTE 14                         ; Damage
*      Water elemental
MOWAEL DATA TXWAEL
       DATA 15                         ; Pattern number
       BYTE 5                          ; Level
       BYTE 20                         ; HP
       BYTE 5                          ; AC
       BYTE 14                         ; Damage
*      Dragon
MODRAG DATA TXDRAG
       DATA 11                         ; Pattern number
       BYTE 6                          ; Level
       BYTE 40                         ; HP
       BYTE 10                         ; AC
       BYTE 22                         ; Damage
MO_END
